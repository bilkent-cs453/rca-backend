# Essential Environment Variables Only

# Application
PORT=3000
NODE_ENV=production

# Database (Required)
DATABASE_URL=postgresql://username:password@hostname.render.com/database_name

# Authentication (Required if using auth)
JWT_SECRET=your-secret-key-here

# Sentry Error Tracking (Optional but recommended)
SENTRY_DSN=your-sentry-dsn-here

# Datadog Monitoring (Required for US5 HTTP logging)
DD_API_KEY=your-datadog-api-key-here
DD_SITE=us5.datadoghq.com
DD_SERVICE=ecommerce-backend
DD_ENV=production
DD_VERSION=1.0.0